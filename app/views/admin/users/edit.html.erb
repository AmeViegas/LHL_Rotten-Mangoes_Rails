<h1> Admin - Edit User - Management </h1>
<%= link_to "Back to this user", admin_user_path(@user) %>

<%= form_for [:admin, @user] , :html => {:multipart => true} do |f| %>
<% if @user.errors.any? %>
<div>
  <%= pluralize(@user.errors.count, "error") %> prevented this movie from being submitted:
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div>
  First Name <br>
  <%= f.text_field :firstname %>
</div>
<div>
  Last Name <br>
  <%= f.text_field :lastname %>
</div>
<div>
  email<br>
  <%= f.text_field :email %>
</div>
<div>
  Create date :
  <%= formatted_date(@user.created_at) %>
</div>
<div>
  update date: <%= formatted_date(@user.updated_at) %>
</div>
<div>
    <%= f.label :admin %><br>
    <%= f.text_field :admin %>
</div>
<div>
  <%= f.submit "Submit" %>
</div>
<% end %>
