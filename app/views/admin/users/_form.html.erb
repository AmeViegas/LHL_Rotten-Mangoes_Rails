<%= form_for [:admin, @user] , :html => {:multipart => true} do |f| %>
<% if @user.errors.any? %>
<div>
    <%= pluralize(@user.errors.count, "error") %>
    prevented the account from being created:
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div>
    First Name
    <br>
    <%= f.text_field :firstname %>
</div>
<div>
    Last Name
    <br>
    <%= f.text_field :lastname %>
</div>
<div>
    email<br>
    <%= f.text_field :email %>
</div>

<div>
    <%= f.label :admin %><br>
    <%= f.check_box :admin %>
</div>

<% if @user.id.present? %>
<% else %>
  <div>
      <%= f.label :temp_pw %><br>
      <%= f.check_box :temp_pw %>
  </div>
  <div>
      <%= f.label :password %><br>
      <%= f.password_field :password%>
  </div>
  <div>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
  </div>
<% end %>

<div><%= f.submit "Submit" %></div>
<% end %>
