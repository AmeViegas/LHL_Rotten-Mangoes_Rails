<h1>Update your password</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %>
      <!-- pluralize is a rails helper that finds the plural of the word
         so in the above the plural of error. if errors.count is > 1 -->
      prevented the account from being created:
      <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>
  <div>
      Welcome
      <%= user.full_name %>. Please change your password
  </div>
  <div>
      <%= f.label :password %><br>
      <%= f.password_field :password%>
  </div>
  <div>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
  </div>

  <div><%= f.submit "Submit" %></div>
<% end %>
